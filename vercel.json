{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm install --legacy-peer-deps && npm run build"
      }
    }
  ],
  "rewrites": [
    { "source": "/((?!api/.*).*)", "destination": "/" }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "status": 404,
      "dest": "/404"
    }
  ],
  "buildCommand": "next build",
  "framework": "nextjs"
} 